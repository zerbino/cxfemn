<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:jaxws="http://cxf.apache.org/jaxws" xmlns:cxf="http://cxf.apache.org/core"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxrs
http://cxf.apache.org/schemas/jaxrs.xsd
http://cxf.apache.org/jaxws
http://cxf.apache.org/schemas/jaxws.xsd
http://cxf.apache.org/core 
      http://cxf.apache.org/schemas/core.xsd">

	<!-- do not use import statements if CXFServlet init parameters link to 
		this beans.xml -->

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<jaxrs:server id="testAutomatesRestfulStateless" address="/">
		<jaxrs:serviceBeans>
			<ref bean="servicePersonne" />
		</jaxrs:serviceBeans>
		 <jaxrs:providers>
	      <ref bean="filtreTest" />
	    </jaxrs:providers>
		<jaxrs:features>
			<cxf:logging />
		</jaxrs:features>

	</jaxrs:server>
	

	<bean id="servicePersonne" class="serveur.ServiceImp" />
	<bean id="filtreTest" class="filter.NameFilter" />
	
</beans>

